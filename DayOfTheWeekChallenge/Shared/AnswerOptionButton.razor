@inherits LayoutComponentBase

<button
    class="btn @((Selected ? "btn-primary" : "btn-outline-primary")) grid-item"
    @onclick="@(e => { OnClickCallback.InvokeAsync(Value); })"
    disabled="@Disabled">
@(ConvertValue(Value))
</button>

@typeparam TAnswer;

@code{
    [Parameter]
    public TAnswer Value { get; set; }

    [Parameter]
    public bool Disabled { get; set; }

    [Parameter]
    public EventCallback<TAnswer> OnClickCallback { get; set; }

    [Parameter]
    public Func<TAnswer, string> ConvertValue { get; set; }

    [Parameter]
    public bool Selected { get; set; }
}